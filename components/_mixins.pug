mixin menuItem(link,name,class_1,class_2,class_3,tooltip)
    a(href=link rel="noreferrer" onClick="closeNav()" translate="no" class=class_1 class=class_2 class=class_3 class="hover:text-red-400 ease-in-out duration-300")=name
        //- .span=tooltip
mixin menuItemDisabled(link,name,class_1,class_2,class_3,tooltip)
    a.grayed-color.transition-3s.accent-hover-third.display-block(href=link rel="noreferrer" onClick="return false" translate="no" class=class_1 class=class_2 class=class_3)=name
        .span=tooltip

mixin menuBar()
    <span aria-label="closebutton" class="w-full h-16 closebtn bottom-0 flex justify-center items-center text-5xl absolute " onClick="closeNav()">&times;</span>
    +menuItem("../","Home","ml-6", "mt-12")
    //- +menuItem("../#aboutme","About_me","translate-hover-x-32")
    //- +menuItem("../blog/","Blog","translate-hover-x-32")
    +menuItem("../portfolio/","Portfolio","mt-6","ml-6")
    //- +menuItemDisabled("../resume/","Resume","translate-hover-x-32")

mixin largeMenuBar()
    +menuItem("../","Home","","px-4","hover:text-red-400")
            //- +menuItem("../#hero","About me","light-text","padding-x-4")
    +menuItem("../portfolio/","Portfolio","hover:text-red-400","px-4")

