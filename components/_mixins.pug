mixin divider-title(title)
    div.margin-y-64.container-fluid.d-flex.justify-content-center.title-container
        div.row.font-mono
            p.fs-6.pt-3.accent-color-second def
                span.fs-3.px-2.font-mono()=title
                span.fs-6.fw-normal.bracket ( )
                span.fs-6.accent-color-third :

mixin tooltip-text(text)
    span.tooltype-text.light-text.font-italic.font-thin()=text


