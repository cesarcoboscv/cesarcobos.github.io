mixin menuItem(link,name,class_1,class_2,class_3,tooltip)
    a.shadow-color.transition-3s.accent-hover.display-block(href=link rel="noreferrer" class=class_1 class=class_2 class=class_3)=name
        .span=tooltip
mixin menuItemDisabled(link,name,class_1,class_2,class_3,tooltip)
    a.shadow-color.transition-3s.accent-hover-third.display-block(href=link rel="noreferrer" onClick="return false" class=class_1 class=class_2 class=class_3)=name
        .span=tooltip

mixin menuBar()
    <a href="javascript:void(0)" class="shadow-color closebtn accent-hover text-size-3xl position-absolute" onClick="closeNav()">&times;</a>
    +menuItem("../#hero","Home","translate-hover-x-32", "margin-top-48")
    +menuItem("../#aboutme","About_me","translate-hover-x-32")
    +menuItemDisabled("../projects/","Projects","translate-hover-x-32")
    +menuItem("../resume/","Resume","translate-hover-x-32")
    +menuItem("../blog/","Blog","translate-hover-x-32")